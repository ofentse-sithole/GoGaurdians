# GoGuardians Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Base URLs
API_BASE_URL=http://localhost:3000/api
API_V1_URL=http://localhost:3000/api/v1

# Firebase Configuration
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_DATABASE_URL=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Location & Maps APIs
MAPS_API_KEY=


## Authentication Endpoints
# Removed: using Firebase Auth SDK instead of custom backend auth endpoints.

# Emergency & Alert APIs
EMERGENCY_ALERT_URL=http://localhost:3000/api/v1/emergency/alert
INCIDENT_REPORT_URL=http://localhost:3000/api/v1/incidents/report
COMMUNITY_ALERTS_URL=http://localhost:3000/api/v1/alerts/community

# Safety & AI Assistant APIs
AI_ASSISTANT_URL=http://localhost:3000/api/v1/ai/assistance
SAFETY_TIPS_URL=http://localhost:3000/api/v1/safety/tips
SAFE_ROUTE_URL=http://localhost:3000/api/v1/routes/safe-route

# Gemini (client-only prototyping; DO NOT ship real keys)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Environment Mode
ENVIRONMENT=development
DEBUG_MODE=true

# API Timeout (in milliseconds)
API_TIMEOUT=30000

# App Version
APP_VERSION=1.0.0
